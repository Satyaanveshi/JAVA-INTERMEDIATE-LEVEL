//The program finds the frequency of the entered word in 
//the given sentence.

import java.util.*;
class wordfreq
{
    String str,word,sear;
    int c=0;
    void input()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a sentence:");
        str=sc.nextLine();
        System.out.println("Enter word to be searched:");
        word=sc.next();
    }
    void frequency()
    {
        StringTokenizer st=new StringTokenizer(str);
        while(st.hasMoreTokens())
        {
            sear=st.nextToken();
            if(sear.contains(word))
            c++;            
        }            
        System.out.println("The frequency of the word "+word+" is: "+c);
    }
    public static void main()
    {
        wordfreq ob=new wordfreq();
        ob.input();
        ob.frequency();
    }
}
